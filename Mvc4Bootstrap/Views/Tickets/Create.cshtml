@model A1fxCrm.Web.Models.CustomerTicket

@{
    ViewBag.Title = "Yeni Müşteri Not";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="#">Anasayfa</a> <span class="divider">/</span></li>
    <li class="active">Müşteriler -  @ViewBag.Customer.FirstName @ViewBag.Customer.LastName </li>
</ul>
@section sidebar {
    <div class="bs-sidebar hidden-print" role="complementary">
        <ul class="nav nav-list">
            <li class="nav-header">@Html.ActionLink("Anasayfa", "Index", "Home")</li>
            <li><a href="#">@Html.ActionLink("Müşteriler", "Index", "customer")</li>
            <li><a href="#">Raporlar</a></li>
            <li class="nav-header">Yönetim</li>
            <li><a href="#">@Html.ActionLink("Kullanıcılar", "Index", "User")</li>
            <li><a href="#">@Html.ActionLink("Yetkiler", "Index", "User")</a></li>
            <li class="divider"></li>

        </ul>

    </div>

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>


        <div class="editor-field" style="visibility: hidden;">
            @Html.DropDownList("CustomerId", String.Empty)
            @Html.ValidationMessageFor(model => model.CustomerId)
        </div>

        <div class="editor-label">
            Başlık
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            Not
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>


        <p>
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Müşteri Detayları", "Edits", "Customer", new { id = @ViewBag.Customer.Id }, new { })
</div>


@section Scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
