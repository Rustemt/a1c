@model A1fxCrm.Web.Models.CustomerTicket

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ul class="breadcrumb">
    <li><a href="#">Anasayfa</a> <span class="divider">/</span></li>
    <li class="active">Müşteriler -  @Model.Customer.FirstName @Model.Customer.LastName </li>
</ul>
@section sidebar {
    <div class="bs-sidebar hidden-print affix" role="complementary">
        <ul class="nav nav-list">
            <li class="nav-header">Anasayfa</li>
            <li><a href="#">Müşteriler</a></li>
            <li><a href="#">Raporlar</a></li>
            <li class="nav-header">Yönetim</li>
            <li><a href="#">Kullanıclar</a></li>
            <li><a href="#">Yetkiler</a></li>
            <li class="divider"></li>

        </ul>

    </div>

}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
    
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Not
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="editor-label">
           Başlık
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
 
        <div class="editor-field" style="visibility: hidden;">>
            @Html.DropDownList("CustomerId", String.Empty)
            @Html.ValidationMessageFor(model => model.CustomerId)
        </div>

        <p>
            <input type="submit" class="btn btn-primary" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Müşteri Detayı", "Details", "Customer", new { id = @Model.Customer.Id }, new { })
</div>

@section Scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
