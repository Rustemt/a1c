@using System.Web.Optimization
<!DOCTYPE html>

<html lang="en" ng-app="main">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website &bull; @ViewBag.Title</title>
  
    @*   @Styles.Render("~/css")*@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap.css" />
    @*<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.2/css/font-awesome.min.css" rel="stylesheet" />*@
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/flaty.css" rel="stylesheet" />
  

   


</head>
<body>
    <div id="navbar" class="navbar">
        <button type="button" class="navbar-toggle navbar-btn collapsed" data-toggle="collapse" data-target="#sidebar">
            <span class="icon-reorder"></span>
        </button>
        <a class="navbar-brand" href="Main.html">
            <img src="/Content/images/logo.png">
        </a>
        <ul class="nav flaty-nav pull-right">
            
            <li class="hidden-xs">
                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                    <i class="icon-envelope"></i>
                    <span class="badge badge-success">3</span>
                </a>
                <ul class="dropdown-navbar dropdown-menu">
                    <li class="nav-header">
                        <i class="icon-comments"></i>
                        3 Tane Yeni Başvuru
                    </li>
                    <li class="msg">
                        <a href="#">
                            <img src="img/demo/avatar/avatar3.jpg" alt="Sarah's Avatar" />
                            <div>
                                <span class="msg-title">Ümmet</span>
                                <span class="msg-time">
                                    <i class="icon-time"></i>
                                    <span>1 dk once</span>
                                </span>
                            </div>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        </a>
                    </li>
                    <li class="msg">
                        <a href="#">
                            <img src="img/demo/avatar/avatar4.jpg" alt="Emma's Avatar" />
                            <div>
                                <span class="msg-title">Rüstem</span>
                                <span class="msg-time">
                                    <i class="icon-time"></i>
                                    <span>2 Gün Önce</span>
                                </span>
                            </div>
                            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris ...</p>
                        </a>
                    </li>
                    <li class="msg">
                        <a href="#">
                            <img src="img/demo/avatar/avatar5.jpg" alt="John's Avatar" />
                            <div>
                                <span class="msg-title">Sait</span>
                                <span class="msg-time">
                                    <i class="icon-time"></i>
                                    <span>8:24 PM</span>
                                </span>
                            </div>
                            <p>Duis aute irure dolor in reprehenderit in ...</p>
                        </a>
                    </li>
                    <li class="more">
                        <a href="#">Hepsine Bak</a>
                    </li>
                </ul>
            </li>


            @{if (HttpContext.Current.User.Identity.IsAuthenticated)
            {


                <li class="user-profile">
                    <a data-toggle="dropdown" href="#" class="user-menu dropdown-toggle">
                        <img class="nav-user-photo" alt="@HttpContext.Current.User.Identity.Name">
                        <span class="hidden-sm" id="user_info">
                            @{@HttpContext.Current.User.Identity.Name}
                        </span>
                        <i class="icon-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-navbar" id="user_menu">

                        <li>
                            <a href="/account/changepassword">
                                <i class="icon-cog"></i>
                                Şifre Değiştir
                            </a>
                        </li>

                        <li class="divider"></li>
                        <li>
                            <a href="/account/LogOff">
                                <i class="icon-off"></i>
                                Çıkış Yap
                            </a>
                        </li>
                    </ul>
                </li>

            }
            }
        </ul>
    </div>
    <div class="container" id="main-container">
        @Html.Partial("_RightMenu")
        <div id="main-content">
            <noscript>
                <div class="alert">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Warning!</strong> Please enable JavaScript in your browser!
                </div>
            </noscript>

            @if (IsSectionDefined("featured"))
            {
                <div>
                    <div class="hero-unit">
                        @RenderSection("featured", required: false)
                    </div>
                </div>
            }

          
            @RenderBody()
            <footer>
                <p>A1 Capital Menkul Değerler A.Ş. © 2013</p>
            </footer>
        </div>



    </div>
    @Scripts.Render("~/js")
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/tinymce/tinymce.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/angular-resource.js"></script>
    <script type="text/javascript" src="~/Scripts/mainmodule.js"></script>
    <script src="~/Scripts/jquery.nicescroll.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/Scripts/flaty.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Scripts/dataTables.bootstrap.js"></script>
</body>
</html>

